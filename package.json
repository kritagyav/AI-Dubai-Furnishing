{
  "name": "@dubai/root",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @dubai/auth generate",
    "db:migrate": "turbo -F @dubai/db migrate",
    "db:push": "turbo -F @dubai/db push",
    "db:seed": "turbo -F @dubai/db seed",
    "db:studio": "turbo -F @dubai/db studio",
    "dev:services": "supabase start && docker compose up -d",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @dubai/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:style": "turbo run lint:style",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "build-storybook": "turbo run build-storybook",
    "storybook": "turbo run storybook",
    "test": "turbo run test",
    "test:e2e": "turbo run e2e",
    "test:ui": "vitest --ui",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@dubai/prettier-config": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@turbo/gen": "^2.5.8",
    "dotenv-cli": "^10.0.0",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "prettier": "@dubai/prettier-config",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "@tailwindcss/oxide",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}
