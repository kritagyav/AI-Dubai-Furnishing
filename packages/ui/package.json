{
  "name": "@dubai/ui",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./avatar": "./src/avatar.tsx",
    "./badge": "./src/badge.tsx",
    "./breadcrumb": "./src/breadcrumb.tsx",
    "./button": "./src/button.tsx",
    "./collapsible": "./src/collapsible.tsx",
    "./dropdown-menu": "./src/dropdown-menu.tsx",
    "./field": "./src/field.tsx",
