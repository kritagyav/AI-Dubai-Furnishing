{
  "name": "@dubai/design-tokens",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./css": "./dist/css/variables.css",
    "./css/zones/*": "./dist/css/zones/*.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsx src/build.ts && tsc",
    "build:tokens": "tsx src/build.ts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsx src/build.ts && tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsx src/build.ts && tsc --noEmit --emitDeclarationOnly false",
    "validate": "tsx src/scripts/validate-contrast.ts"
  },
  "devDependencies": {
    "@dubai/eslint-config": "workspace:*",
    "@dubai/prettier-config": "workspace:*",
    "@dubai/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "style-dictionary": "^5.2.0",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@dubai/prettier-config"
}
