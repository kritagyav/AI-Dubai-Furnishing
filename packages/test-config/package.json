{
  "name": "@dubai/test-config",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./vitest": {
      "default": "./vitest.shared.ts"
    },
    "./fixtures": {
      "default": "./src/fixtures.ts"
    },
    "./mocks": {
      "default": "./src/mocks.ts"
    },
    "./a11y": {
      "default": "./src/a11y.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@fast-check/vitest": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "fast-check": "catalog:",
    "jest-axe": "catalog:",
    "vitest": "catalog:"
  },
  "devDependencies": {
    "@dubai/eslint-config": "workspace:*",
    "@dubai/prettier-config": "workspace:*",
    "@dubai/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@dubai/prettier-config"
}
