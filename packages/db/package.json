{
  "name": "@dubai/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "prisma generate && tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "generate": "prisma generate",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "push": "prisma db push",
    "studio": "prisma studio",
    "migrate": "prisma migrate dev",
    "seed": "pnpm with-env tsx src/seed.ts",
    "test": "vitest run",
    "typecheck": "prisma generate && tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "catalog:",
    "pg": "^8.18.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@dubai/eslint-config": "workspace:*",
    "@dubai/prettier-config": "workspace:*",
    "@dubai/test-config": "workspace:*",
    "@dubai/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "^8.16.0",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "prettier": "@dubai/prettier-config"
}
