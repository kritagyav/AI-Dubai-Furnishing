{
  "name": "@dubai/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "generate": "pnpm with-env prisma generate",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "push": "pnpm with-env prisma db push",
    "studio": "pnpm with-env prisma studio",
    "migrate": "pnpm with-env prisma migrate dev",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@dubai/eslint-config": "workspace:*",
    "@dubai/prettier-config": "workspace:*",
    "@dubai/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@dubai/prettier-config"
}
