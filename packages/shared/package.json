{
  "name": "@dubai/shared",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "default": "./src/env.ts"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "default": "./src/logger.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "test": "vitest run",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "pino": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@dubai/eslint-config": "workspace:*",
    "@dubai/prettier-config": "workspace:*",
    "@dubai/test-config": "workspace:*",
    "@dubai/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "pino-pretty": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "prettier": "@dubai/prettier-config"
}
